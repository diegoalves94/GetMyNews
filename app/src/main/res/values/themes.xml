<resources>
    <style name="Theme.GetMyNews" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/gmn_light_primary</item>
        <item name="colorOnPrimary">@color/gmn_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/gmn_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/gmn_light_onPrimaryContainer</item>
        <item name="colorSecondary">@color/gmn_light_secondary</item>
        <item name="colorOnSecondary">@color/gmn_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/gmn_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/gmn_light_onSecondaryContainer</item>
        <item name="colorTertiary">@color/gmn_light_tertiary</item>
        <item name="colorOnTertiary">@color/gmn_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/gmn_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/gmn_dark_background</item>
    </style>

    <style name="Theme.GetMyNews.Title" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/gmn_light_onSurface</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.GetMyNews.Subtitle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/text_size_subtitle</item>
        <item name="android:textColor">@color/gmn_light_onSurface</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Theme.GetMyNews.Content" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/text_size_content</item>
        <item name="android:textColor">@color/gmn_light_onSurface</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Theme.GetMyNews.Label" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/text_size_content</item>
        <item name="android:textColor">@color/gmn_light_onSurface</item>
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>